/* Import bootstrap */
@import 'bootstrap'

/* Import snippets */
@import 'snippets'

/* Import variables */
@import 'variables'

/* Import components */
@import 'components/*'

/* Import elements */
@import 'elements/*'

/* Users styles */
@import 'users/*'

/* Idea styles */
@import 'ideas/*'

/* Design styles */
@import 'design/*'

/* Proposal styles */
@import 'proposal/*'

/* Design styles */
@import 'xmovement/**/*'

body
	font-family 'Lato'
	min-width 320px
	padding-top $navbar-height

body.transparent
	padding-top 0

.container
	container-fixed()
	@media (min-width $screen-sm-min)
		width 100%
	@media (min-width $screen-md-min)
		width 100%
	@media (min-width $screen-lg-min)
		width $container-lg

.visuallyhidden
	display none

a
	color main-color

.clearfloat
	clearfloat()

.muted-link
	color #CCC
	margin 10px 10px 0 10px
	&:hover
		color main-color
		cursor pointer
		text-decoration underline

.error-list
	list-style none
	margin 0
	padding 0
	li
		color red
		margin 0
		padding 0

.nav-tabs
	border-color border-color

.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus
	border-color border-color
	border-bottom-color transparent

.text-linethru
	padding 10px
	width 100%
	.line
		background-color #ddd
		height 1px
		width 100%
	.text
		background white
		color #bbb
		display inline-block
		font-size 16px
		height 20px
		line-height 15px
		padding 0 10px
		position relative
		top -10px

.hero-container
	background-color rgba(50,10,10,1)
	// background-image url('https//static.pexels.com/photos/5888/garden-sitting-grass-shoes.jpg')
	background-size cover
	background-position center
	background-repeat no-repeat
	padding 170px 20px 150px 20px
	position relative
	margin-top -20px
	.text-container
		position relative
		z-index 1
	.black-overlay
		background-color rgba(30,0,0,0.4)
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		z-index 0

.text-container
	text-align center
	h1
		color white
		font-weight 300
		margin-bottom 30px
	button
		background transparent
		border white 2px solid
		border-radius 0px
		color white
		font-size 20px
		font-weight 300
		margin 0 auto
		outline 0
		padding 8px 26px
		text-align center
		&hover
			background-color main-color
			border-color main-color

.panel-heading
	h2
		margin 40px 0 10px 0

body.colorful
	background-color main-color
	.page-header
		border none
		h2
			color white

// Errors
.error-page
	.text-container
		text-align center
		h1
			color main-color
			font-size 42px
			font-weight 300
			margin-bottom 20px
		h3
			color main-color
			font-weight 300
			margin-bottom 20px
		a
			color main-color
			display block
			font-weight 300
			padding 10px
			i
				font-size 22px

.action-panel
	border border-color 2px dashed
	border-radius 10px
	color #CCC
	display block
	font-size 24px
	margin 20px
	padding 60px 40px
	text-align center
	transition(all 0.2s linear)
	&:hover
		border-color darken(border-color, 10%)
		color darken(#CCC, 10%)
		text-decoration none
