				box-shadow none
				height auto 
				font-size 18px
				margin 0 auto 20px auto
				max-width 400px 
				padding 15px
				text-align center
				width 100%
				






// Toggle switch


label.toggle-switch
	z-index 1
	position relative
	display block
	padding 0 10px
	border-radius 50px
	overflow hidden
	width 70px
	height 40px
	margin 0 auto
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	-ms-box-sizing border-box
	box-sizing border-box
	cursor pointer
	background-color #e1e1e1

	.toggle-button
		position absolute
		display inline-block
		padding 0
		margin 0
		background transparent
		box-sizing border-box
		background-clip padding-box
		white-space nowrap
		height 34px
		width 34px
		border-radius 30px
		color #454545
		background-color white  
		left 3px
		top 3px
		// animation
		-webkit-transition left 0.1s ease-in-out
		-moz-transition left 0.1s ease-in-out
		-o-transition left 0.1s ease-in-out
		-ms-transition left 0.1s ease-in-out
		transition left 0.1s ease-in-out
		&:before
			z-index -1
			content ''
			position absolute
			width 70px
			height 40px
			top -3px
			left -3px
			box-sizing border-box
		
		&.checked
			left 32px
			&:before
				left -32px
				background-color main-color
				background-position 10px 5px
	input 
		position absolute
		overflow hidden
		clip rect(0 0 0 0)
		margin 0
		padding 0
		border 0
		-ms-filter unquote("progidDXImageTransform.Microsoft.Alpha(Opacity=0.1)")
		filter unquote("alpha(opacity=0.1)")
		opacity 0.001