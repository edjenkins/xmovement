.proposal-preview-column
	text-align center
	ul.proposal-preview
		background-color #f9f9f9
		border border-color 1px solid
		border-radius 6px
		list-style none
		margin 30px auto
		overflow hidden
		padding 0
		li
			list-style none
			margin 0
			padding 20px
			text-align center
			&.name-header
				background-color #f4f4f4
				font-size 16px
				font-weight bold
			&.description-header
				background-color #f9f9f9
				color #999
			&.add-content
				background-color white
				i
					color #CCC
			&.user-header
				.avatar-wrapper
					position relative
					.avatar
						background-color white
						background-size cover
						background-position center
						background-repeat no-repeat
						border-radius 50%
						height 80px
						width 80px
						@media(min-width: $screen-sm-min)
							height 80px
							width 80px
