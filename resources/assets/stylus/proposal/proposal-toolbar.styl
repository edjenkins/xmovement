// main: app.styl

.proposal-toolbar
	display block
	margin 0 0 20px 0
	padding 0
	position relative
	text-align center
	.previous-button, .next-button
		background darken(main-color, 10%)
		border none
		display inline-block
		margin 0
		padding 20px
		position relative
		z-index 10
		transition(all 0.2s linear)
		&:hover
			background darken(main-color, 20%)
			cursor pointer
			text-decoration none
	&.colorful
		background darken(main-color, 10%)
		.previous-button, .next-button
			background darken(main-color, 10%)
			border-color white
			color white
			&:hover
				background darken(main-color, 20%)
	ul.page-dots
		height 14px
		list-style none
		margin 0
		padding 0
		position absolute
		top 50%
		margin-top -7px
		text-align center
		width 100%
		li
			background-color alpha(white, 0.5)
			border-radius 7px
			display inline-block
			height 14px
			margin 0px 3px
			padding 0
			width 14px
			transition(all 0.2s linear)
			&.active
				background-color alpha(white, 1.0)
