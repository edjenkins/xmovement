// XMStyles

.coming-soon-container
	color white
	padding 60px 40px
	text-align center
	img
		margin-bottom 40px
		height 120px
	h1
		color white
		margin 0 auto
		padding 0
	h5
		color white
		font-size 18px
		margin 15px auto 0 auto
		max-width 500px

.ideas-container
	margin-top 0
	@media(max-width: $screen-sm-max)
		margin-top 0

.module-control.search-element
	height 60px
	position relative
	width 40px
	.search-bar
		display none
		input
			border none
			height 36px
			line-height 36px
			margin 12px 0
			padding 0
			outline 0
			position absolute
			right 0
			width 150px
			&:active
				outline 0
	#search-button
		margin 10px 0
		height 40px
		line-height 40px
		position absolute
		left 0
		text-align center
		width 40px
		i
			color #CCC
			animate()
		&:hover
			cursor pointer
			i
				color darken(#CCC, 10%)
	&.open
		width 190px
		.search-bar
			display block

@media(max-width: $screen-sm-max)
	.module-controls
		.module-control.search-element
			&.open
				border-top border-color 1px solid
				width 100%
				.search-bar
					display block
					input
						width calc(100% - 40px)

.categories-container
	padding-top 15px
	ul.category-pills
		margin-left -5px
		margin-right -5px
		padding 0
		text-align center
		li.category-pills
			padding 10px 15px

.no-results
	color #CCC
	font-size 20px
	line-height 200px
	text-align center

.shortlist-info-box
	background-color border-color
	background-color main-color
	border-bottom-left-radius 6px
	border-bottom-right-radius 6px
	margin 0
	padding 12px 18px
	p
		color #666
		color white
		margin 0
		padding 0



// Categories

.categories-overlay
	background-color alpha(black, 0.95)//main-color
	pointer-events none
	opacity 0
	overflow scroll
	position fixed
	top 0
	bottom 0
	right 0
	left 0
	z-index 9999
	text-align left
	animate()
	.close-categories-overlay
		color white
		cursor pointer
		position absolute
		top 0
		right 0
		height 60px
		line-height 60px
		min-width 60px
		padding 0 20px
		z-index 9999
	.categories-container
		display none
		padding 60px
		@media(max-width: $screen-sm-max)
			padding 20px
		ul.primary-categories
			cleanlist()
			li.primary-category
				cleanlist()
				a
					color white
					display block
					font-size 28px
					font-weight normal
					line-height 1em
					padding 20px 10px 10px 10px
					text-align left
					&:hover
						text-decoration none
			li.secondary-category
				cleanlist()
				a
					background-color alpha(white, 0.1)
					border-radius 6px
					color white
					display inline-block
					float left
					line-height 1em
					margin 5px
					padding 8px 15px
					text-align left
					animate()
					&:hover
						background-color alpha(white, 0.5)
						cursor pointer
						text-decoration none

	&.visible
		opacity 1
		pointer-events all
		.categories-container
			display block
