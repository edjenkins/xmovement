.ideas-container
	margin-top 20px

.module-control.search-element
	input
		border none
		height 36px
		line-height 36px
		margin 12px 0
		padding 0
		outline 0
		&:active
			outline 0
	#search-button
		margin 10px 0
		height 40px
		line-height 40px
		text-align center
		width 40px
		i
			color #CCC

.no-results
	color #CCC
	font-size 20px
	line-height 200px
	text-align center

.shortlist-info-box
	background-color border-color
	background-color main-color
	border-bottom-left-radius 6px
	border-bottom-right-radius 6px
	margin 0
	padding 12px 18px
	p
		color #666
		color white
		margin 0
		padding 0
