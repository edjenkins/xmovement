.idea-progress-bar
	height 60px
	position relative
	width 100%
	.ipb-line
		border-radius 4px
		height 8px
		position absolute
		top 15px
		left 10px
		right 10px
		&.ipb-placeholder-line
			background-color border-color
		&.ipb-progress-line
			background-color main-color
			max-width 98%
			width 0%
			transition(width 0.8s ease-out)
	.ipb-dot
		background-color border-color
		border-radius 10px
		height 20px
		position absolute
		width 20px
		top 9px
		transition(all 0.2s ease-out)
		&.ipb-start-dot
			left 0
		&.ipb-end-dot
			right 0
		&:hover
			background-color darken(border-color, 10%)
			cursor pointer
		&.complete
			background-color main-color
			&:hover
				background-color darken(main-color, 10%)
		.ipb-label
			opacity 0
			position absolute
			margin-left -90px
			text-align center
			bottom 20px
			width 200px
			transition(all 0.2s linear)
			.ipb-label-text
				background main-color
				border-radius 4px
				color white
				display inline-block
				padding 6px 10px
				position relative
				&:before
					content ''
					position absolute
					border-style solid
					border-width 6px 12px 0
					border-color main-color transparent
					display block
					width 0
					z-index 1
					bottom -6px
					left 50%
					margin-left -12px
		&:hover
			cursor pointer
			.ipb-label
				opacity 1
				bottom 26px
