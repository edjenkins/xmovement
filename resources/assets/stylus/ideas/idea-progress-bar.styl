.idea-progress-bar
	height 30px
	margin 0 15px
	position relative
	.ipb-line
		border-radius 10px
		height 20px
		position absolute
		top 15px
		left 0px
		right 0px
		&.ipb-placeholder-line
			background-color border-color
		&.ipb-progress-line
			background-color main-color
			min-width 20px
			transition(width 0.8s ease-out)
	.ipb-progress-arrow
		content ''
		position absolute
		border-style solid
		border-width 8px 16px 0
		border-color main-color transparent transparent
		display block
		width 0
		z-index 1
		top 0px
		right 0px
	.ipb-dot
		background-color white
		border-radius 50%
		height 14px
		position absolute
		width 14px
		top 18px
		transition(all 0.2s ease-out)
		&.ipb-start-dot
			left 3px
		&.ipb-end-dot
			right 3px
		&:hover
			cursor pointer
		&.complete
			background-color white
		.ipb-label
			opacity 0
			position absolute
			margin-left -90px
			text-align center
			bottom 20px
			width 200px
			transition(all 0.2s linear)
			.ipb-label-text
				background main-color
				border-radius 4px
				color white
				display inline-block
				padding 6px 10px
				position relative
				&:before
					content ''
					position absolute
					border-style solid
					border-width 6px 12px 0
					border-color main-color transparent
					display block
					width 0
					z-index 1
					bottom -6px
					left 50%
					margin-left -12px
		&:hover
			cursor pointer
			.ipb-label
				opacity 1
				bottom 26px
.idea-tile
	.idea-progress-bar
		height 20px
		margin 0 20px
		width auto
		.ipb-dot
			height 16px
			width 16px
			top 11px
