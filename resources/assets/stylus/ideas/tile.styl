// XMStyles

.tile.idea-tile
	border border-color 1px solid
	display block
	height 400px
	margin 15px auto
	max-width 360px
	position relative
	transition(all linear 0.2s)
	.tile-image
		background-color #f1f1f1
		background-position center
		background-repeat no-repeat
		background-size cover
		-webkit-background-size cover
		-o-background-size cover
		display block
		height 0
		padding-bottom 60%
	.inner-container
		overflow hidden
		padding 10px 20px
		a.idea-name
			color #555
			font-size 18px
			margin 0
			padding 5px 0
			word-wrap break-word
		p.idea-description
			color #999
			word-wrap break-word
	.tile-footer
		background white
		bottom 0
		min-height 44px
		position absolute
		width 100%
		p
			margin 0
			padding 15px 20px

.mini-tile
	border-bottom border-color 1px solid
	display block
	height auto
	padding 15px 0
	max-width 360px
	overflow hidden
	position relative
	transition(all linear 0.2s)
	.inner-container
		h4, p
			white-space nowrap
			.fa
				margin-right 6px
	&:hover
		color main-color
		cursor pointer
