// Idea tile
.tile.idea-tile
	border border-color 1px solid 
	display block
	margin 15px auto
	max-width 400px
	position relative
	&:hover
		cursor pointer
	.tile-image
		background-color #f1f1f1
		background-position center
		background-repeat no-repeat
		background-size cover
		-webkit-background-size cover
		-o-background-size cover
		height 0
		padding-bottom 80%  
	.inner-container
		background white 
		bottom 0
		left 0
		right 0 
		position absolute  
		padding 10px 20px
	 