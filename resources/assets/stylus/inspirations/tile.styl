.tile.inspiration-tile
	background white
	border-radius 5px
	box-sizing border-box
	margin 30px auto 0 auto
	padding-bottom 44px
	overflow hidden
	// display none
	width calc((100% - 90px) / 3)//width calc((100% - 120px) / 4)
	// &.loaded
		// display block
	&:hover
		cursor pointer
	@media(max-width: 1120px)
		width calc((100% - 90px) / 3)
	@media(max-width: 987px)
		width calc((100% - 60px) / 2)
	@media(max-width: 568px)
		width calc(100% - 30px)
	img.photo-tile-image
		width 100%
	.video-tile-image
		border-bottom border-color 1px solid
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		height 0
		padding-bottom 50%
		position relative
		i.fa.fa-play
			color white
			font-size 28px
			left 50%
			line-height 50px
			margin-left -25px
			margin-top -25px
			position absolute
			text-align center
			top 50%
			width 50px
	.file-tile-icon, .link-tile-icon
		border-bottom border-color 1px solid
		text-align center
		i
			color #999
			font-size 24px
			line-height 80px
	.inner-container
		overflow hidden
		padding 15px 15px 0px 15px
		p.inspiration-description
			color #999
			margin 0
			padding 0
			word-wrap break-all
	.inspiration-tile-footer
		background white
		bottom 0
		left 15px
		min-height 44px
		position absolute
		right 15px
		text-align left
		p.inspiration-author
			color #CCC
			font-size 14px
			line-height 44px
			margin 0
			padding 0
			word-wrap break-all
			a
				color #CCC
		p.inspiration-endorsements
			color #CCC
			font-size 14px
			line-height 44px
			margin 0
			padding 0
			position absolute
			right 0
			top 0
			i
				margin-left 4px
