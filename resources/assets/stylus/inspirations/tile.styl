// XMStyles

.inspirations-container
	max-width 1500px
	padding 0 30px

.side-panel .side-panel-box
	background white
	border-radius 5px
	color #666
	font-size 18px
	margin-top 30px
	text-align center
	.side-panel-box-header
		border-bottom border-color 1px solid
		margin 0 15px
		padding 15px 0px
	.side-panel-box-content
		padding 15px
		button
			background-color main-color
			color white
			display block
			line-height 24px
			text-align center
			width 100%
			&:hover
				background-color darken(main-color, 10%)
				cursor pointer

	&.info-box
		.side-panel-box-content
			p
				color #999
				font-size 14px
				margin 0 0 15px 0
				padding 0

	&.submission-box
		.dropzone-container
			border border-color 1px solid
			border-radius 5px
			overflow hidden
			padding 0
			margin-bottom 10px
			.dropzone
				.dz-message
					font-size 15px
		form
			margin-top 15px
			.input-wrapper
				margin-bottom 15px
				input, textarea
					border border-color 1px solid
					border-radius 5px
					display block
					font-size 15px
					line-height 26px
					margin 0 0 15px 0 !important
					padding 10px 15px
					width 100%
					&:focus
						outline 0

		ul.submission-type-selector
			cleanlist()
			height 46px
			overflow hidden
			li
				cleanlist()
				border-bottom border-color 3px solid
				box-sizing border-box
				color #999
				float left
				line-height 43px
				width 25%
				animate()
				&:last-child
					border-right none
				&:hover
					color #666
					cursor pointer
				&.selected
					border-bottom main-color 3px solid
					color main-color
					&:active
						background-color main-color

.tile.inspiration-tile
	background white
	border-radius 5px
	box-sizing border-box
	margin 30px auto 0 auto
	padding-bottom 44px
	overflow hidden
	display none
	width calc((100% - 90px) / 3)//width calc((100% - 120px) / 4)
	&.loaded
		display block
	&:hover
		cursor pointer
	@media(max-width: 1120px)
		width calc((100% - 90px) / 3)
	@media(max-width: 987px)
		width calc((100% - 60px) / 2)
	@media(max-width: 568px)
		width calc(100% - 30px)
	img.photo-tile-image
		width 100%
	.video-tile-image
		border-bottom border-color 1px solid
		background-position center
		background-repeat no-repeat
		background-size cover
		display block
		height 0
		padding-bottom 50%
		position relative
		i.fa.fa-play
			color white
			font-size 28px
			left 50%
			line-height 50px
			margin-left -25px
			margin-top -25px
			position absolute
			text-align center
			top 50%
			width 50px
	.inner-container
		overflow hidden
		padding 15px 15px 0px 15px
		p.inspiration-description
			color #999
			margin 0
			padding 0
			word-wrap break-all
	.inspiration-tile-footer
		background white
		bottom 0
		left 15px
		min-height 44px
		position absolute
		right 15px
		text-align left
		p.inspiration-author
			color #CCC
			font-size 14px
			line-height 44px
			margin 0
			padding 0
			word-wrap break-all
			a
				color #CCC
		p.inspiration-endorsements
			color #CCC
			font-size 14px
			line-height 44px
			margin 0
			padding 0
			position absolute
			right 0
			top 0
			i
				margin-left 4px


#inspiration-modal
	.modal-content
		overflow hidden
	.comments-section
		background-color transparent
		.post-comment-container, .post-reply-container
			.comment-composer-wrapper
				button.post-comment-button
					bottom 32px
