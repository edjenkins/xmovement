.admin-container
	padding 30px 0 !important
	.admin-panel
		margin-bottom 15px
		padding 0

ul.progression-selector
	cleanlist()
	li
		cleanlist()
		box-sizing border-box
		float left
		text-align center
		width calc(100% / 3)
		.inner-wrapper
			border border-color 1px solid
			margin 10px
			overflow hidden
			padding 10px
			position relative
			h5
				font-weight bold
				margin 10px
				padding 0
			p
				display none
				&.progression-type-description
					color #999
					display block
					margin 10px 10px 50px 10px
					padding 0
			button
				background-color #e9e9e9
				border none
				border-radius 6px
				bottom 10px
				left 10px
				right 10px
				color #999
				line-height 32px
				padding 0 16px
				position absolute
				animate()
				&:hover
					background-color darken(#e9e9e9, 10%)
					color darken(#999, 10%)
		&.selected
			.inner-wrapper button
				background-color main-color
				color white
				&:hover
					background-color darken(main-color, 10%)
