// main: app.styl

.flash
	background main-color
	color white
	font-size 1.2em
	padding 30px 10px
	position fixed
	text-align center
	z-index 1000
	top 0px
	left 0px
	right 0px
	&.flash-success
		background success-color
		border-bottom 3px solid darken(success-color, 10%)
		color white
	&.flash-warning
		background warning-color
		border-bottom 3px solid darken(warning-color, 10%)
		color white
	&.flash-danger
		background danger-color
		border-bottom 3px solid darken(danger-color, 10%)
		color white
