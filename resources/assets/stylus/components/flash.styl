.flash
	background main-color
	color white  
	font-size 1.2em 
	padding 30px 10px
	position fixed
	text-align center
	z-index 1000 
	top 0px
	left 0px
	right 0px
	&.flash-success
		background alpha(success-color, 1)
		color white 
	&.flash-warning
		background alpha(warning-color, 1)
		color white 
	&.flash-danger
		background alpha(danger-color, 1)
		color white