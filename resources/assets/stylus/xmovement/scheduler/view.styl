// XMStyles

.picker-column
	padding-left 34px
	text-align center
	width 300px
.options-column
	width calc(100% - 320px)
	&.proposal-mode
		width 100%
.picker-column, .options-column
	float left
	@media(max-width: 768px)
		float none
		padding 0
		width 100%

ul.scheduler-options-list
	list-style none
	margin 10px
	padding 0
	li
		border-bottom #e1e1e1 1px solid
		box-sizing border-box
		font-size 15px
		margin 0
		padding 0 20px
		padding-left 55px
		padding-right 80px
		position relative
		width 100%
		transition(all 0.2s linear)
		&:last-child
			border-bottom none
		.scheduler-option-user
			background border-color
			background-position center
			background-repeat no-repeat
			background-size cover
			border none
			border-radius 20px
			height 40px
			width 40px
			position absolute
			left 0px
			top 20px
		.scheduler-option-value
			h5
				color #444
				font-size 1.2em
				line-height 30px
				margin 0
				padding 15px 0 0 0
			p.author-subtitle
				color #ddd
				font-size 0.9em
				line-height 15px
				margin 0 0 15px 0
				padding 0
				a
					color #ddd
		.vote-container.scheduler-option-vote-container
			line-height 80px
			position absolute
			right 0
			top 0
			width 70px
			.vote-count
				line-height 80px
				text-align center
				position absolute
				right 40px
				top 0
				width 30px
			.voting-locked
				color #999
				line-height 80px
				text-align center
				position absolute
				right 10px
				top 0
				width 30px
			.vote-controls
				height 80px
				width 40px
				position absolute
				right 0
				top 0
				.vote-button
					height 30px
					width 40px
					line-height 30px
					position absolute
					text-align center
					i
						position relative
						right 0
					&:hover
						cursor pointer
					&.vote-up
						top 10px
					&.vote-down
						top 40px
		.proposal-button
			color border-color
			top 25px
			position absolute
			right 10px
			&.fa-check-square
				color main-color

.submit-scheduler-option-container
	border border-color 1px solid
	display inline-block
	margin 20px 0
	position relative
	input#scheduler-contribution
		border none
		box-sizing border-box
		color #444
		display inline
		padding 15px
		width 100%
		&:focus
			outline 0
	button#submit-button
		background main-color
		border none
		color white
		display block
		padding 15px 0
		text-align center
		width 100%
		&:hover
			background darken(main-color, 10%)

//  Proposal
.scheduler-option-value.proposal
	color #444
	text-align center
	h2
		font-size 18px
		line-height 25px
		padding 0
		margin 0
		padding-top 15px
	h3
		color #AAA
		font-size 13px
		line-height 25px
		margin 0
		padding 0
		padding-bottom 15px
