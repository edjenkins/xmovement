// XMStyles

ul.scheduler-options-list
	list-style none
	margin 10px
	padding 0
	li
		border #e1e1e1 1px solid
		box-sizing border-box
		font-size 15px
		float left
		height 80px
		margin 10px
		padding 0 20px
		padding-left 75px
		padding-right 80px
		position relative
		width calc((100% - 40px)/3)
		transition(all 0.2s linear)
		&:nth-child(3n-2)
			margin-left 0
		&:nth-child(3n)
			margin-right 0
		@media(max-width: 992px)
			float left
			height 80px
			width calc((100% - 20px)/2)
			&:nth-child(3n-2)
				margin-left 10px
			&:nth-child(3n)
				margin-right 10px
			&:nth-child(2n)
				margin-right 0
			&:nth-child(2n-1)
				margin-left 0
		@media(max-width: 568px)
			float none
			height 80px
			margin 10px 0 !important
			width calc(100% - 20px)

		.scheduler-option-user
			background border-color
			background-position center
			background-repeat no-repeat
			background-size cover
			border none
			border-radius 20px
			height 40px
			width 40px
			position absolute
			left 20px
			top 20px
		.scheduler-option-value
			color #444
			text-align center
			h2
				font-size 18px
				line-height 25px
				padding 0
				margin 0
				padding-top 15px
			h3
				color #AAA
				font-size 13px
				line-height 25px
				margin 0
				padding 0
				padding-bottom 15px
		.value
			color #444
			font-size 1.2em
		.vote-container.scheduler-option-vote-container
			line-height 80px
			position absolute
			right 0
			top 0
			width 70px
			.vote-count
				line-height 80px
				text-align center
				position absolute
				right 40px
				top 0
				width 30px
			.vote-controls
				height 80px
				width 40px
				position absolute
				right 0
				top 0
				.vote-button
					height 30px
					width 40px
					line-height 30px
					position absolute
					text-align center
					i
						position relative
						right 0
					&:hover
						cursor pointer
					&.vote-up
						top 10px
					&.vote-down
						top 40px
		.proposal-button
			color border-color
			top 25px
			position absolute
			right 10px
			&.fa-check-square
				color main-color

.submit-scheduler-option-container
	border border-color 1px solid
	margin 20px 10px
	padding-right 100px
	position relative
	input#scheduler-contribution
		border none
		box-sizing border-box
		color #444
		display inline
		padding 15px
		width 100%
		&:focus
			outline 0
	button#submit-button
		background main-color
		border none
		color white
		display inline
		padding 15px 0
		position absolute
		text-align center
		width 100px
		right 0
		top 0
		&:hover
			background darken(main-color, 10%)
