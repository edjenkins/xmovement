.xmovement-tile
	box-sizing border-box
	float left
	padding 10px 
	text-align center 
	width 33%
	transition(all 0.2s linear)
	.tile-body
		background #f2f2f2
		display table 
		height 140px 
		width 100% 
		transition(all 0.2s linear)
		.vertically-aligned-text
			display table-cell
			vertical-align middle 
			text-align center
			width 100% 
			h4
				color #444
				margin 5px 0
				padding 0
			p
				color #AAA
				margin 5px 0
				padding 0
		&:hover
			cursor pointer
			background main-color 
			.vertically-aligned-text
				h4, p
					color white
		.tile-footer p
			color main-color
	.tile-footer
		background white
		padding 0
		transition(all 0.2s linear)
		p
			color #999
			line-height 40px
			margin 0
			padding 0
		ul.voting-controls
			list-style none
			margin 0 
			padding 0
			li
				display inline-block
				line-height 40px
				margin 0 
				padding 0 15px
				p, i
					color #AAA
					line-height 40px
				&.vote-up
					top -2px
				&:hover
					cursor pointer
					&.vote-up i
						color success-color
				&:hover
					cursor pointer
					&.vote-down i
						color danger-color