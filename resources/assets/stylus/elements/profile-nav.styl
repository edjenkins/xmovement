// main: app.styl

.profile-nav
	border-bottom border-color 1px solid
	ul
		list-style none
		margin 0
		padding 0
		li
			background white
			border #fff 1px solid
			border-bottom border-color 1px solid
			display inline-block
			margin 0
			padding 0
			position relative
			bottom -1px
			transition(all .5s linear)
			a
				color #aaa
				font-size 15px
				line-height 44px
				padding 10px 20px
				&:hover
					color main-color
					text-decoration none
			&.active
				border border-color 1px solid
				border-bottom white 1px solid
				a
					color main-color
