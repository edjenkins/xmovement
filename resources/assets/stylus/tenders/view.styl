.tender-container

	.comments-section
		margin-left 60px
		margin-top 15px

		@media(max-width: 768px)
			margin-left 30px

		@media(max-width: 568px)
			margin-left 0px

	.timeline-column

		.timeline-section
			margin-left 30px
			padding 15px 0 15px 30px
			position relative
			&:before
				background main-color
				border-radius 50%
				content ''
				height 14px
				width 14px
				position absolute
				left -5px
				top 50%
				margin-top -10px
				z-index 2
			&:after
				background main-color
				content ''
				position absolute
				top 0
				bottom 0
				left 0
				width 5px
				z-index 1
			&:first-child
				&:after
					top 75px
				&:before
					top 75px
			&:last-child
				&:after
					bottom calc(50% + 0px)

			@media(max-width: 768px)
				margin-left 0px

			@media(max-width: 568px)
				padding 15px 0
				&:before, &:after
					display none

			.tender-author, .tender-preview
				background-color white
				border border-color 1px solid
				list-style none
				margin 0 auto
				overflow hidden
				padding 15px 15px 15px 120px
				position relative
				text-align left

				&.tender-author
					min-height 120px
					.tender-avatar
						background-color light-grey
						border-radius 50%
						height 80px
						left 20px
						position absolute
						top 20px
						width 80px
						.avatar-wrapper
							position relative
							text-align center
							.avatar
								background-color border-color
								background-size cover
								background-position center
								background-repeat no-repeat
								border-radius 50%
								height 80px
								margin 0 auto
								width 80px
								@media(min-width: $screen-sm-min)
									height 80px
									width 80px
					h3
						margin 10px 0

				&.tender-preview
					min-height 150px
					.pdf-preview
						background-color light-grey
						border-radius 6px
						height 110px
						left 20px
						padding 20px
						position absolute
						top 20px
						width 80px
						text-align center
						animate()
						i
							color #999
							font-size 32px
						h5
							color #999
						&:hover
							background-color darken(light-grey, 5%)
							cursor pointer

			.tender-questions
				background-color white
				border border-color 1px solid
				list-style none
				min-height 50px
				overflow hidden
				padding 20px
				position relative
				text-align left
				ul
					cleanlist()
					li.tender-question
						cleanlist()
						margin-bottom 20px
						&:last-child
							margin-bottom 0
						h5
							font-weight bold
							margin 0 0 5px 0
							padding 0
						p
							margin 0
							padding 0

			.tender-update
				background-color white
				border border-color 1px solid
				list-style none
				min-height 50px
				overflow hidden
				padding 55px 20px 20px 20px
				position relative
				text-align left
				.update-label
					background-color main-color
					border-top-right-radius 4px
					border-bottom-right-radius 4px
					color white
					line-height 30px
					padding 0 10px
					position absolute
					top 10px
					left 0px
				h5
					font-weight bold
					margin 0 0 5px 0
					padding 0
				p
					margin 0
					padding 0
