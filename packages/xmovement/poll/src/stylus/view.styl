// XMStyles

ul.poll-options-list
	list-style none
	margin 10px
	padding 0
	li
		border-bottom #e1e1e1 1px solid
		font-size 15px
		line-height 80px
		margin 0
		min-height 80px
		padding 0 20px
		padding-left 55px
		padding-right 80px
		position relative
		transition(all 0.2s linear)
		&:last-child
			border-bottom none
		.poll-option-user
			background border-color
			background-position center
			background-repeat no-repeat
			background-size cover
			border none
			border-radius 20px
			height 40px
			width 40px
			position absolute
			left 0
			top 20px
		.poll-option-value
			h5
				color #444
				font-size 1.2em
				line-height 30px
				margin 0
				padding 15px 0 0 0
			p.author-subtitle
				color #ddd
				font-size 0.9em
				line-height 15px
				margin 0
				padding 0
				a
					color #ddd

.submit-poll-option-container
	border border-color 1px solid
	margin 20px 10px
	padding-right 100px
	position relative
	input#poll-contribution
		border none
		box-sizing border-box
		color #444
		display inline
		padding 15px
		width 100%
		&:focus
			outline 0
	button#submit-button
		background main-color
		border none
		color white
		display inline
		padding 15px 0
		position absolute
		text-align center
		width 100px
		right 0
		top 0
		&:hover
			background darken(main-color, 10%)
