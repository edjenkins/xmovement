.module-description
	background main-color
	color white
	padding 20px 

ul.poll-options-list
	list-style none
	margin 0
	padding 0
	li
		border-bottom #e1e1e1 1px solid 
		font-size 15px 
		line-height 80px
		margin 0
		padding 0 20px
		padding-right 80px 
		position relative
		transition(all 0.2s linear)
		.poll-option-value
			color #444
			font-size 1.2em 
		.poll-option-vote-container
			background #f9f9f9
			line-height 80px  
			position absolute
			right 0
			top 0
			width 70px 
			.poll-option-vote-count
				color #999
				font-weight bold 
				text-align center 
				position absolute
				right 0
				top 0
				width 30px 
				&.positive-vote
					color success-color
				&.negative-vote
					color danger-color
			.poll-option-vote-controls
				height 80px
				width 40px
				position absolute
				right 30px
				top 0
				.vote-button
					height 30px
					width 40px
					line-height 30px
					position absolute
					text-align center
					i
						color #999
						position relative
						right 0
					&:hover
						cursor pointer
					&.vote-up
						top 10px
						&:hover i
							color success-color
					&.vote-down
						top 40px
						&:hover i
							color danger-color
								